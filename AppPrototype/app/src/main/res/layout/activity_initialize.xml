<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/backimg1"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.williamkwok.appprototype.InitializeActivity">

    <TextView android:text="Please enter in the room number " android:id="@+id/roomPrompt" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterRoomNumber"
        android:height="50dp"
        android:layout_marginBottom="50dp"
        android:background="#ffff"
        android:layout_above="@+id/roomButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/roomButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#bfe9ff"
        android:minWidth="200dp"
        android:minHeight="40dp"/>


</RelativeLayout>
