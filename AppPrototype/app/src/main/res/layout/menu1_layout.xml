<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/backimg1">

    <TextView android:text="Welcome to Hotel AppPrototype.\nBelow are services available to you during your stay. Enjoy!"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_marginBottom ="30dp"
        android:textColor="#ffff"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Towel"
        android:id="@+id/button1"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Service"
        android:id="@+id/button2"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/button1"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amenities"
        android:width="200dp"
        android:height="50dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wake up call"
        android:id="@+id/button4"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/button3"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay per view"
        android:id="@+id/button5"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/button4"
        android:layout_centerInParent="true"
         />



</RelativeLayout>